<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quizes</title></title>

    <!-- <link rel="stylesheet" href="/quizpage.css"> -->
    <script src="https://kit.fontawesome.com/11d589870a.js" crossorigin="anonymous"></script>
</head>
<body>
    <div id="question-label">
        <% data.map((item)=>{ %>
            
      <div id="all-details">
          
              <div class="name" onclick="movetopage(`<%= item._id %>`)">
                        <div class="questions">

                            Date : <%= item.dot %>
                        </div>
                        <div class="questions">
                            No of Questions : <%= item.noofquestions %>
                        </div>
                        <div class="questions">
                            Question Category : <%= item.category %>
                        </div>
                        <div class="questions">
                            Question Difficulty : <%= item.difficulty %>
                        </div>
                        <div class="questions">
                            Question Type : <%= item.type %>
                        </div>
                        <div class="questions">
                            
                        </div>
                        </div>
                        
                        </div>
                        
                   
                        <%})%>
                        </div>
                     
        
        
      
</body>
<style>
    html,body{
        margin: 0px;
    padding: 0px;
    width: 100%;
    height: 100%;
    background-color:  rgb(70, 192, 192);
    }
    #question-label{
        padding: 20px;
    }
    #all-details{
        padding: 7px;
        display: flex;
    flex-direction: column;
    padding-bottom: 30px;
    }
    .name{
       
    background-color: rgb(90, 88, 88);
    width: 100%;
    font-size: 18px;
    font-family: 'Raleway',sans-serif;
    color: wheat;
    padding: 20px;
    }
    .questions{
        padding-bottom: 10px;
    }
    .name:hover{
        cursor: pointer;
    }
</style>
<script>
    const movetopage=(val)=>{
        location.assign(`${window.location.origin}/api/quiz/${val}`)
    }
</script>

</html>